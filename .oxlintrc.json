{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["eslint", "typescript", "react", "node"],
	"rules": {
		"eslint/quotes": ["warn", "single", { "avoidEscape": true }],
		"eslint/prefer-arrow-callback": "error",
		"eslint/curly": "error",
		"eslint/eqeqeq": "warn",
		"eslint/no-async-promise-executor": "warn",
		"eslint/no-restricted-globals": ["error", "fetch"],
		"eslint/no-console": ["error", { "allow": ["warn", "error", "trace"] }],
		"eslint/no-case-declarations": "warn",
		"eslint/no-prototype-builtins": "warn",
		"eslint/no-useless-escape": "warn",
		"eslint/prefer-const": "warn",
		"eslint/prefer-spread": "warn",
		"eslint/no-debugger": "warn",
		"typescript/adjacent-overload-signatures": "warn",
		"typescript/await-thenable": "warn",
		"typescript/no-empty-object-type": "off",
		"typescript/no-wrapper-object-types": "warn",
		"typescript/no-unsafe-function-type": "warn",
		"typescript/explicit-module-boundary-types": "off",
		"typescript/no-explicit-any": "off",
		"typescript/no-floating-promises": "warn",
		"typescript/no-for-in-array": "warn",
		"typescript/no-implied-eval": "warn",
		"typescript/consistent-type-imports": [
			"error",
			{ "disallowTypeAnnotations": false, "fixStyle": "separate-type-imports" }
		],
		"typescript/no-misused-promises": ["warn", { "checksVoidReturn": false }],
		"typescript/no-unused-expressions": "warn",
		"typescript/no-unused-vars": "warn",
		"typescript/no-unsafe-assignment": "off",
		"typescript/no-unsafe-member-access": "warn",
		"typescript/no-this-alias": "warn",
		"typescript/no-unnecessary-type-assertion": "warn",
		"typescript/prefer-optional-chain": "warn",
		"typescript/prefer-regexp-exec": "warn",
		"typescript/require-await": "warn",
		"typescript/restrict-plus-operands": "warn",
		"typescript/restrict-template-expressions": "warn",
		"typescript/unbound-method": "warn",
		"typescript/no-inferrable-types": "off",
		"typescript/no-unnecessary-parameter-property-assignment": "off",
		"typescript/ban-ts-comment": "off",
		"typescript/no-unsafe-argument": "off",
		"typescript/no-unsafe-enum-comparison": "off",
		"typescript/prefer-promise-reject-errors": "off",
		"typescript/prefer-readonly": ["error", { "onlyInlineLambdas": true }],
		"typescript/explicit-member-accessibility": "off",
		"node/no-unpublished-import": "off",
		"node/no-extraneous-import": ["error", { "allowModules": ["@matter/protocol"] }]
	},
	"overrides": [
		{
			"files": ["**/*.tsx"],
			"plugins": ["react"],
			"rules": {
				"react/jsx-key": "error",
				"react/jsx-no-duplicate-props": "error",
				"react/exhaustive-deps": "off"
			}
		}
	]
}
